{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "dist",
		"sourceMap": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["DOM", "ES2020"],
		"experimentalDecorators": true,
		"useDefineForClassFields": true
	},
	"include": ["src"]
}
